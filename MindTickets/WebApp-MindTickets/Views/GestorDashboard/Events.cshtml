
@{
    ViewData["Title"] = "Events";
    Layout = "~/Views/Shared/_Gestor.cshtml";
}

@section Styles {
    <!-- Styles -->
    <link href="https://cdn.datatables.net/v/dt/dt-1.13.5/datatables.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

}

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3 bg-second-primary">
        <h6 class="m-0 font-weight-bold text-white">Lista de Eventos</h6>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-sm-3">
                <a class="btn btn-success" href="https://localhost:7161/GestorDashboard/CreateEvents" id="btnNew">
                    <i class="bi bi-calendar-plus"></i>Nuevo Evento</a>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-sm-12">
                <table class="table table-bordered" id="tbdata" cellspacing="0" style="width:100%">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nombre</th>
                            <th>Modalidad</th>
                            <th>Logo</th>
                            <th>Slogan</th>
                            <th>Fecha y Hora</th>
                            <th>Descripción</th>
                            <th>Restricciones</th>
                            <th>Organizador</th>
                            <th>Teléfono</th>
                            <th>Correo</th>
                            <th>Website</th>
                            <th>Categoría</th>
                            <th>Creador</th>
                            <th>Acción</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!--  Modal-->
<div class="modal fade" id="modalData" tabindex="-1" role="dialog" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h6>Detalle del Evento</h6>
                <button class="close" type="button" data-bs-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">×</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <input type="hidden" value="0" id="txtId">
                    <div class="row">
                        <div class="col-sm-8">
                            <div class="form-row">
                                <p id="id" hidden></p>
                                <div class="form-group col-sm-6">
                                    <label for="txtName">Nombre del Evento</label>
                                    <input type="text" class="form-control form-control-sm input-validar" id="txtName" name="Nombre del Evento">
                                </div>
                                <div class="form-group col-sm-6">
                                    <label for="txtDescription">Descripción</label>
                                    <input type="text" class="form-control form-control-sm input-validar" id="txtDescription" name="Descripción">
                                </div>                                
                            </div>

                            @* Date Picker *@
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label>Fecha:</label>
                                    <div class="input-group date" id="datepicker">
                                        <input type="date" id="eventDate" name="date" class="form-control">                                        
                                        <br />
                                        <label>Hora:</label>
                                        <input type="text" id="eventTime" name="Time" class="form-control">
                                    </div>
                                </div>
                            </div>
                        </div>


                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary btn-sm" type="button" id="btnSave">Guardar</button>
                <button class="btn btn-danger btn-sm" type="button" data-bs-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>



