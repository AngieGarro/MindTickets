<!-- DataTables -->
<link href="https://cdn.datatables.net/v/dt/dt-1.13.5/datatables.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/v/dt/dt-1.13.5/datatables.min.js"></script>

<body>
    <div class="checkout-container">
        <div class="left-block">
            <h1>Resumen de compra</h1>
            <ul class="order-summary">
                <li><label id="title"></label></li>
                <li><label id="tickets"></label></li>
                <li><label id="events"></label></li>
                <li><label id="cost"></label></li>
                <li><label id="tax"></label></li>
                <li><label id="total"></label></li>
            </ul>
        </div>
        <div class="right-block">
            <h1>Información de Pago</h1>

            <h2>Usuario</h2>
            <p id="name"></p>
            <p id="email"></p>

            <h3>Método de Pago</h3>
            <label>
                <img src="/Images/paypal.png" alt="paypal-icon">
                <button class="btn btn-info" type="button" id="btnPaypal">Paypal</button>
                <button class="btn btn-dark" type="button" id="btnSunpe">Sunpe</button>

            </label>
        </div>
    </div>


    <!--  Modal-->
    <div class="modal fade" id="modalData" tabindex="-1" role="dialog" aria-hidden="true" data-backdrop="static">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h6>Detalle de Compra</h6>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form>
                        <input type="hidden" value="0" id="txtId">
                        <div class="row">
                            <div class="col-sm-8">
                                <div class="form-row">
                                    <div class="form-group col-sm-6">
                                        <label for="txtTransaction">Comprobante de compra</label>
                                        <input type="text" class="form-control form-control-sm input-validar" id="txtTransaction" name="transaction" disabled>
                                    </div>
                                    <div class="form-group col-sm-6">
                                        <label for="txtUban">Cuenta Uban</label>
                                        <input type="text" class="form-control form-control-sm input-validar" id="txtUban" name="Uban" placeholder="Ingrese su cuenta Uban">
                                    </div>
                                    <div class="form-group col-sm-6">
                                        <label for="txtAmount">Monto</label>
                                        <input type="text" class="form-control form-control-sm input-validar" id="txtAmount" name="Monto" disabled>
                                    </div>
                                    <div class="form-group col-sm-6">
                                        <label for="txtDescription">Detalle de compra</label>
                                        <input type="text" class="form-control form-control-sm input-validar" id="txtDescription" name="Descripcion" disabled>
                                    </div>
                                    <div class="form-group col-sm-6">
                                        <label for="txtSender">Comprador</label>
                                        <input type="text" class="form-control form-control-sm input-validar" id="txtSender" name="Comprador" disabled>
                                    </div>
                                </div>                               
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary btn-sm" type="button" id="btnSave">Guardar</button>
                    <button class="btn btn-danger btn-sm" type="button" data-dismiss="modal">Cancel</button>
                </div>
            </div>
        </div>
    </div>
</body>
