@{
	Layout = "";
}

<!-- Styles -->
<link href="https://cdn.datatables.net/v/dt/dt-1.13.5/datatables.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.rtl.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<link href="~/css/site.css" rel="stylesheet" />
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
<script src="~/js/controlactions.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="https://widget.cloudinary.com/v2.0/global/all.js" type="text/javascript"></script>
<script src="~/js/registeruser.js"></script>
<body>
	<div class="contenedor-registro">
		<div class="registro-container">
			<div class="registro-form">
				<img class="img-Logo-login" src="~/images/logotipo mindstickets.png" />
				<h2 style="color:black">Registro de Usuario</h2>
				<br />
				<h5>Datos Personales</h5>
				<br />
					<form class="row g-3" action="@Url.Action("Register","Home")" method="post">
						<div class="col-md-6">
							<label for="inputNombre" class="form-label">Nombre</label>
							<input type="text" class="form-control" id="inputName" name="Nombre" required />
						</div>
						<div class="col-md-6">
							<label for="inputApellidos" class="form-label">Apellidos</label>
							<input type="text" class="form-control" id="inputLastName">
						</div>
						<div class="col-md-6">
							<label for="inputId" class="form-label">Cedula</label>
							<input type="text" class="form-control" id="inputId">
						</div>
						<div class="col-12">
							<label for="inputEmail4" class="form-label">Email</label>
							<input type="email" id="inputEmail" class="form-control" name="Correo" required />
						</div>
						<div class="col-12">
							<label for="inputPhone" class="form-label">Teléfono</label>
							<input type="text" class="form-control" id="inputPhone">
						</div>
						<br />
						<h5>Dirección</h5>
						<br />
						<div class="col-md-6">
							<label for="inputAddress1" class="form-label">Provincia</label>
							<input type="text" class="form-control" id="inputAddress1">
						</div>
						<div class="col-md-6">
							<label for="inputAddress2" class="form-label">Cantón</label>
							<input type="text" class="form-control" id="inputAddress2">
						</div>
						<div class="col-md-6">
							<label for="inputAddress3" class="form-label">Distrito</label>
							<input type="text" class="form-control" id="inputAddress3">
						</div>
						<div class="col-12">
							<label for="inputAddress4" class="form-label">Dirección Exacta</label>
							<input type="text" class="form-control" id="inputAddress4">
						</div>
						<br />
						<h5>Seguridad</h5>
						<br />
						<div class="col-md-6">
							<label for="inputPassword4" class="form-label">Contraseña</label>
							<input type="password" class="form-control" name="Clave" id="inputPassword1">
						</div>
						<div class="col-md-6">
							<label for="inputPassword4" class="form-label">Validación de Contraseña</label>
							<input type="password" class="form-control" name="ConfirmarClave" id="inputPassword2">
						</div>
						<div class="col-md-4">
							<label for="inputState" class="form-label">Tipo de Usuario</label>
							<select id="inputTypeUser" class="form-select">
								<option>Cliente</option>
								<option>Gestor</option>
							</select>
						</div>
					<div class="col-md-6">
						<img id="ProfilePicture" src="#" class="rounded mx-auto d-block" style="width: 100px; height: 100px;" alt="Foto Perfil">
						<button class="btn btn-primary" id="btnImagen">Cargar</button>
					</div>
						<br />
					<div class="mb-3">
							<div class="d-grid">
								<button class="btn btn-primary" id="btn_register" type="button">Registrarse</button>
								<br />
								<a class="btn btn-link" href="@Url.Action("Login","Home")">Ya tienes una cuenta? Inicia sesion</a>
							</div>
						</div>
					</form>
					<br />
			</div>
		</div>
	</div>
</body>
