                </li>
                <li class="option-dash">
                    <button type="button" class="btn btn-outline-secondary" id="btnMembresias"><i class="bi bi-card-checklist"></i>Finanzas</button>
                </li>
                <li class="option-dash">
                    <button type="button" class="btn btn-outline-secondary" id="btnEventos"><i class="bi bi-calendar-event"></i>Mis Eventos</button>
                </li>
                <li class="option-dash">
                    <button type="button" class="btn btn-outline-secondary" id="btnTBD"><i class=" fa-solid fa-school">Mi Membresía</i> </button>
                </li>
            </ul>
        </div>
    </div>

    <div class="info-dash" id="container-Gestor">
        <div id="primerContainer" class="adm-cont container-createEvent">
            <i class="icon-welcome-dash fa-solid fa-wrench"></i>
            <h1 class="text-welcome-dash">Panel de Gestor</h1>
        </div>
    </div>

