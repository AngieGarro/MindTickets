<body>
    <div class="checkout-container">
        <div class="left-block">
            <h1>Resumen de compra</h1>
            <ul class="order-summary">
                <li>Plan: <label id="title"></label></li>
                <li>Tickets: <label id="tickets"></label></li>
                <li>Eventos: <label id="events"></label></li>
                <li>Costo: <label id="cost"></label></li>
                <li>Impuesto: <label id="tax"></label></li>
                <li>Total:<label id="total"></label></li>
            </ul>
        </div>
        <div class="right-block">
            <h1>Información de Pago</h1>

            <h2>Usuario</h2>
            <h3>Nombre: </h3>
            <h3>Correo: </h3>

            <h2>Método de Pago</h2>
            <label>
                <img src="/Images/paypal.png" alt="paypal-icon">
                <button type="button" class="btn btn-info">Paypal</button>
                <button type="button" class="btn btn-dark">Sunpe</button>

            </label>
        </div>
    </div>
</body>

