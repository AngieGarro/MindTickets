@page
@model WebApp.Pages.RegisterUserModel
@{
	Layout = "";
}
<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.rtl.min.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.rtl.css" rel="stylesheet" />
<link href="~/lib/bootstrap/dist/css/bootstrap.css" rel="stylesheet" />
<link href="~/css/site.css" rel="stylesheet" />
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
<script src="~/js/controlactions.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script src="~/js/registeruser.js"></script>


<body>
	<div class="contenedor-registro">
		<div class="registro-container">
			<div class="registro-form">
				<a class="navbar-brand" @Html.ActionLink(" ", "Login", "Home", new { area = "" }, new { @class = "navbar-brand" })><img class="img-Logo-login" src="~/images/logotipo mindstickets.png" /></a>
				<h2>Registro de Usuario</h2>
				<br />
				<form action="#">
					<div class="form-group">
						<label for="id">Cédula</label>
						<input type="text" id="id" name="id" required>
					</div>
					<div class="form-group">
						<label for="fullName">Nombre completo</label>
						<input type="text" id="fullName" name="fullName" required>
					</div>
					<div class="form-group">
						<label for="lastName">Apellidos</label>
						<input type="text" id="lastName" name="lastName" required>
					</div>
					<div class="form-group">
						<label for="email">Correo</label>
						<input type="text" id="email" name="email" required>
					</div>
					<div class="form-group">
						<label for="phone">Teléfono</label>
						<input type="text" id="phone" name="phone" required>
					</div>
					<div class="form-group">
						<label for="address">Dirección</label>
						<input type="text" id="address" name="address" required>
					</div>
					<div class="form-group">
						<label for="password">Contraseña</label>
						<input type="password" id="password" name="password" required>
					</div>
					<div class="form-group">
						<label for="password2">Validación contraseña</label>
						<input type="password" id="password2" name="password2" required>
					</div>
					<button type="button" id="btn_register">Registrarse</button>
					<a type="button" asp-page="/Index">Volver al menú</a>
				</form>

			</div>
		</div>
	</div>
</body>